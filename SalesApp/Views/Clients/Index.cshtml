@model IEnumerable<SalesApp.Models.Client>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<button style="margin:10px; background-color:rgb(92, 166, 76)">
    <a class="nav-link text-white-50" asp-action="Create">Kreiraj novog kupca</a>
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientAdress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientPlace)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VisitDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegularDiscount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaysInDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegionName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientAdress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientPlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VisitDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegularDiscount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PaysInDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientId">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.ClientId">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientId">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
