<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdditionalDiscount" class="control-label"></label>
                <input asp-for="AdditionalDiscount" class="form-control" />
                <span asp-validation-for="AdditionalDiscount" class="text-danger"></span>
