@{
    ViewData["Title"] = "Sales Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Odaberi kupca</label>
                @Html.DropDownList("Clients", @ViewBag.Clients as List<SelectListItem>, "Select Client", new { @class = "form-control"})
            </div>
          
            <div class="form-group">
                <label class="control-label">Listu proizvoda sa kolicinom</label>
                <table>
                    <thead>
                    <th>Naziv</th>
                    <th>Kolicina</th>
                    </thead>
                    <tbody>
                        @foreach (OrderDetail orderDetail in ViewBag.OrderDetails)
                        {
                            <tr>
                                <td>
                                    @orderDetail.Product.ProductName
                                </td>
                                <td>
                                    @orderDetail.Product.ProductPrice
                                </td>
                                <td>
                                    <input name="orderDetails[]" value="@orderDetail.Quantity">
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>












































