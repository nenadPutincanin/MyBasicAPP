@{
    ViewData["Title"] = "Sales Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group" style="margin-bottom:30px">
               
                @Html.DropDownList("Clients", @ViewBag.Clients as List<SelectListItem>, "Odaberi kupca", new { @class = "form-control"})
            </div >
           
            <div class="form-group">
               
                <table class="table">
                    <thead>
                    <th scope="col">Naziv</th>
                    <th scope="col">Cena</th>
                    <th scope="col">Kolicina</th>
                    
                    </thead>
                    <tbody>
                        @foreach (OrderDetail orderDetail in ViewBag.OrderDetails)
                        {
                            <tr>
                            <td>
                                @orderDetail.Product.ProductName
                            </td>
                            <td >
                                    @string.Format("{0:0.00}", orderDetail.Product.ProductPrice)
                            </td>
                            <td>
                                <input name="orderDetails[]" value="@orderDetail.Quantity">
                            </td>
                          
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="form-group">
                <input type="submit" value="Snimi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
